<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/outline"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_round_background"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/left_navigation_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginVertical="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/bg_round_circle_background_ripple"
            android:src="@drawable/ic_left_arrow"
            app:tint="@color/onBackground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:includeFontPadding="false"
            android:text="@string/settings_screen_title"
            android:textAppearance="@style/Text.Regular.14"
            android:textColor="@color/onBackground" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:background="@drawable/bg_bottom_round_background"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:includeFontPadding="false"
            android:text="@string/settings_app_view_title"
            android:textAppearance="@style/Text.Bold.14"
            android:textColor="@color/onBackground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bg_bottom_round_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/settings_dark_theme"
                android:textAppearance="@style/Text.Regular.14"
                android:textColor="@color/onBackground" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/theme_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/Switch" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
