<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.google.android.material.chip.Chip
        android:id="@+id/chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:clickable="false"
        android:textAppearance="@style/Text.Tag"
        app:checkedIconVisible="false"
        app:closeIconVisible="false"
        app:ensureMinTouchTargetSize="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="пепега" />

    <View
        android:id="@+id/clickable_space_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/chip"
        app:layout_constraintEnd_toEndOf="@id/chip"
        app:layout_constraintStart_toStartOf="@id/chip"
        app:layout_constraintTop_toTopOf="@id/chip" />

</androidx.constraintlayout.widget.ConstraintLayout>
