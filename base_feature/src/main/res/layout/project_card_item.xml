<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    tools:layout_width="160dp">

    <ru.surfstudio.practice.ui.view.FigureView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:figure_color="@color/secondary_background"
        app:figure_corner_radius="16dp" />

    <ImageView
        android:id="@+id/project_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_logo_mars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/project_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text.Button"
            android:textSize="14sp"
            tools:text="Название\nпроекта" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ru.surfstudio.practice.ui.view.avatar.AvatarListView
                android:id="@+id/avatars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ru.surfstudio.practice.ui.view.avatar.CircleAvatarImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:visibility="gone"
                    tools:src="@drawable/ic_random_logo" />

                <ru.surfstudio.practice.ui.view.avatar.CircleAvatarImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="-10dp"
                    android:visibility="gone"
                    tools:src="@drawable/ic_random_logo" />

                <ru.surfstudio.practice.ui.view.avatar.CircleAvatarImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="-10dp"
                    android:visibility="gone"
                    tools:src="@drawable/ic_random_logo" />

                <ru.surfstudio.practice.ui.view.avatar.CircleTextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="-10dp"
                    android:visibility="gone"
                    app:circle_color="@color/primary_background" />

            </ru.surfstudio.practice.ui.view.avatar.AvatarListView>

            <TextView
                android:id="@+id/label_no_avatars_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/projects_no_avatars"
                android:textAlignment="center"
                android:textAppearance="@style/Text.Tag"
                android:textColor="@color/torch_red"
                android:visibility="gone"
                tools:visibility="visible" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>