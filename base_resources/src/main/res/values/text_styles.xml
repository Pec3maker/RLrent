<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Text.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Grey">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text.Unactive">
        <item name="android:textColor">@color/text_unactive</item>
    </style>

    <style name="Text.MainStyle">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.MainStyle.Bold">
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Title.Bold">
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="Text.Medium">
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Subtitle.Grey">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text.SmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Button">
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.ButtonError">
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Tag">
        <item name="android:fontFamily">@font/sf_pro_text</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>