<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button -->
    <style name="Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Text.Button</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/selector_button_round_12_blue</item>
        <item name="android:textColor">@color/secondary_background</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/selector_button_round_12_white</item>
        <item name="android:textColor">@color/main</item>
    </style>

    <style name="Button.Framed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/bg_button_framed</item>
    </style>
</resources>