<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- светлая тема -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <item name="android:windowBackground">@color/secondary_background</item>
        <item name="android:colorBackground">@color/secondary_background</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:buttonStyle">@style/Button</item>
        <item name="materialButtonStyle">@style/Button</item>

        <item name="android:navigationBarColor">@color/transparent</item>

        <item name="cardViewStyle">@style/CardView</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:textAppearance">@style/Text</item>

        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
    </style>

    <style name="MainTabLayoutStyle">
        <item name="tabTextAppearance">@style/Text.Medium</item>
        <item name="tabSelectedTextColor">@color/blue</item>
        <item name="textAppearanceBody1">@style/Text.SmallText</item>
        <item name="textAppearanceBody2">@style/Text.Title</item>
        <item name="tabTextColor">@color/grey</item>
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

    <!-- region Стиль AlertDialog  -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MaterialComponents.Default</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/Text.Subtitle</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="AlertDialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/main</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearance.MaterialComponents.MediumComponent
        </item>
        <item name="android:textAllCaps">true</item>
        <item name="rippleColor">@color/lines</item>
    </style>

    <style name="ShapeAppearance.MaterialComponents.Default">
        <item name="cornerSize">16dp</item>
    </style>
    <!-- endregion -->

    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/bg_text_field_cursor</item>
    </style>

</resources>
